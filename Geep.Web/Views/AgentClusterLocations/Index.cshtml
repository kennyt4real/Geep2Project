@model Geep.ViewModels.CoreVm.AgentClusterLocationVm

@{
    ViewData["Title"] = "Agent Cluster";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="AdminDashboard">Dashboard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Agent Cluster Location</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12 text-center">
                    <h5> <b>ADD AGENT TO NEW CLUSTER</b></h5>
                </div>
                <br />
                <form id="myform" onsubmit="return false;" asp-antiforgery="true">
                    <div class="row">

                        <div class="col-md-12 form-group">
                            <label asp-for="StateId" class="control-label"></label>
                            <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId" onchange="LoadClusters();">
                                <option>--Select State--</option>
                            </select>
                            <span asp-validation-for="StateId" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="AgentId" class="control-label"></label>
                            <select asp-for="AgentId" class="form-control" asp-items="ViewBag.AgentId">
                                <option>--Select Agent--</option>
                            </select>
                            <span asp-validation-for="AgentId" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 form-group">
                            <label asp-for="ClusterLocationId" class="control-label"></label>
                            <select asp-for="ClusterLocationId" class="form-control">
                                <option>--Select Cluster Location--</option>
                            </select>
                            <span asp-validation-for="ClusterLocationId" class="text-danger"></span>
                        </div>

                        <div class="col-md-12  text-md-center">
                            <input type="submit" value="ADD STATE" class="text-uppercase btn btn-rounded mb-5 btn-info" />

                            <a href="#" class="text-uppercase btn btn-rounded mb-5 btn-warning" data-dismiss="modal">CANCEL</a>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>List of States</h4>
                    </div>
                    @*<div class="col-md-6 text-right">
                            <a href="#" onclick="AddNew()" class="btn btn-primary">ADD NEW STATE</a>
                        </div>*@
                </div>
                <br />
                <br />

                <div class="table-responsive">
                    <table id="Jdatatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Agent Name</th>
                                <th>Cluster Name</th>
                                <th>State Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        window.oTable = $('#Jdatatable').DataTable({
            destroy: true,
            "processing": true,
            "ajax": {
                "url": "/AgentClusterLocations/GetIndex",
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": "AgentName", "autoWidth": true },
                { "data": "ClusterName", "autoWidth": true },
                { "data": "ClusterStateName", "autoWidth": true },
                {
                    "data": "AgentClusterLocationId",
                    "autoWidth": true,
                    "render": function (data) {
                        return '<a href="#" onclick="Edit(' + data + ')"><i><u><small>Edit</small></u></i></a>&nbsp;&nbsp;' +
                            '<a href="#" onclick="Delete(' + data + ')"><i class="text-danger"><u><small >Delete</small></u></i></a>';
                    }
                }

            ]
        });
    });

    function AddNew() {
        var url = "/AgentClusterLocations/Save?id=0";
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal('show');
            });
    };

    function Edit(agentClusterLocationId) {
        var url = "/AgentClusterLocations/Save?id=" + agentClusterLocationId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal('show');
            });
    };

    function Delete(agentClusterLocationId) {
        swal({
            title: "Are you sure to remove this Agent ClusterLocation?",
            text: "Once deleted, you will not be able to use this Agent ClusterLocation again!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: "/AgentClusterLocations/Delete?id=" + agentClusterLocationId,
                        "datatype": "json",
                        success: function (data) {
                            window.oTable.ajax.reload(); //run my_fun() ondomready
                            toastr.success(data.message);
                            swal(data.message);
                        }
                    });

                } else {
                    swal("Its Ok you canceled, This Agent ClusterLocation is safe!");
                }
            });
    };

    $("#myform").submit(function (e) {
        e.preventDefault();
        var formData = new FormData(this);
        $.ajax({
            type: "POST",
            url: "/AgentClusterLocations/Save",
            data: formData,
            success: function (data) {
                if (data.status) {
                    window.oTable.ajax.reload(); //run my_fun() ondomready
                    $("#myform")[0].reset()
                    toastr.success(data.message);
                }
                else {
                    toastr.warning(data.message);
                }
            },
            cache: false,
            contentType: false,
            processData: false
        });
    });


    function LoadClusters() {
        var stateId = $("#StateId").val();
        $.ajax
            ({
                url: '/Basic/GetClusterList?stateId=' + stateId,
                type: 'GET',
                datatype: 'application/json',
                contentType: 'application/json',
                success: function (result) {
                    $("#ClusterLocationId").html("");
                    $.each($.parseJSON(result),
                        function (i, city) {
                            $("#ClusterLocationId").append($('<option></option>').val(city.ClusterLocationId).html(city.Name));
                        });
                },
                error: function () {
                    alert("Whooaaa! Something went wrong..");
                }
            });
    }

</script>
