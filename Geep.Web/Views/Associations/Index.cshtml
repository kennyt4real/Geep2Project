@model Geep.ViewModels.CoreVm.AssociationVm

@{
    ViewData["Title"] = "Association";
}

<nav class="page-breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="AdminDashboard">DashBoard</a></li>
        <li class="breadcrumb-item active" aria-current="page">Local Govt</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h4>List of Associations</h4>
                    </div>
                    <div class="col-md-6 text-right">
                        @*<a href="#" onclick="AddNew()" class="btn btn-primary">ADD NEW ASSOCIATION</a>*@
                        <a href="#" onclick="PushGroupsToWhiteList()" class="btn btn-primary">PUSH GROUPS TO WHITELIST</a>

                    </div>
                </div>
                <br />
                <br />

                <div class="table-responsive">
                    <table id="Jdatatable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Reference ID</th>
                                <th>Group Name</th>
                                <th>Group Type</th>
                                <th>Group Eamil</th>
                                <th>Accreditation Status</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        window.oTable = $('#Jdatatable').DataTable({
            destroy: true,
            "processing": true,
            "ajax": {
                "url": "/Associations/GetIndex",
                "type": "GET",
                "datatype": "json",
            },
            "columns": [
                { "data": "AssociationRefId", "autoWidth": true },
                { "data": "AssociationName", "autoWidth": true },
                { "data": "AssociationType", "autoWidth": true },
                { "data": "GroupEmail", "autoWidth": true },
                { "data": "AccreditationStatus", "autoWidth": true },
                //{
                //    "data": "AssociationId",
                //    "autoWidth": true,
                //    "render": function (data) {
                //        return '<a href="#" onclick="AssociationMembers(' + data + ')"><i><u><small>Members</small></u></i></a>&nbsp;&nbsp;' +
                //            '<a href="#" onclick="Edit(' + data + ')"><i class="text-info"><u><small>Edit</small></u></i></a>&nbsp;&nbsp;' +
                //            '<a href="#" onclick="Delete(' + data + ')"><i class="text-danger"><u><small >Delete</small></u></i></a>';
                //    }
                //}

            ]
        });
    });

    function AddNew() {
        var url = "/Associations/Save?id=0";
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal('show');
            });
    };

    function Edit(associationId) {
        var url = "/Associations/Save?id=" + associationId;
        $('#myModalDivBody').load(url,
            function () {
                $('#actionsList').modal('show');
            });
    };

    function AssociationMembers(associationId) {
        var url = "/Beneficiaries/AssociationMembers?id=" + associationId;
        window.open(url, '_blank');
    };

    function Delete(associationId) {
        swal({
            title: "Are you sure to remove this Association?",
            text: "Once deleted, you will not be able to use this Association again!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: "POST",
                        url: "/Associations/Delete?id=" + associationId,
                        "datatype": "json",
                        success: function (data) {
                            window.oTable.ajax.reload(); //run my_fun() ondomready
                            toastr.success(data.message);
                            swal(data.message);
                        }
                    });

                } else {
                    swal("Its Ok you canceled, This Association is safe!");
                }
            });
    };

    function PushGroupsToWhiteList() {
        //var url = "/Beneficiaries/PushRecordsToWhiteList";
        $.ajax({
            type: "POST",
            url: "/Associations/PushGroupsToWhiteList",
            "datatype": "json",
            success: function (data) {
                if (data.status) {
                    //window.oTable.ajax.reload(); //run my_fun() ondomready
                    //$("#myform")[0].reset()
                    toastr.success(data.message);
                }
                else {
                    toastr.warning(data.message);
                }
            },
            cache: false,
            contentType: false,
            processData: false
        });
    }
   
    $("#myform").submit(function (e) {
        e.preventDefault();
        var formData = new FormData(this);
        $.ajax({
            type: "POST",
            url: "/States/Save",
            data: formData,
            success: function (data) {
                if (data.status) {
                    window.oTable.ajax.reload(); //run my_fun() ondomready
                    $("#myform")[0].reset()
                    toastr.success(data.message);
                }
                else {
                    toastr.warning(data.message);
                }
            },
            cache: false,
            contentType: false,
            processData: false
        });
    });

</script>
