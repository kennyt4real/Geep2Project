@model Geep.ViewModels.UserVm.AddUserToRoleVm
@{
    ViewData["Title"] = "Add User to Role";
}

<div class="row">
    <div class="col-md-12 ">
        <form id="myEditform" onsubmit="return false;" asp-antiforgery="true">
            <div class="row">
                @if (Model != null && string.IsNullOrEmpty(Model.UserId))
                {
                  <input type="hidden" asp-for="UserId" />
                }

                <div class="col-md-12 form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-12 form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-12 form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="col-md-12 form-group">
                    <label asp-for="RoleName" class="control-label"></label>
                    <select asp-for="RoleName" class="form-control" multiple="multiple" asp-items="ViewBag.RoleName">
                        <option value="">--Select Role--</option>
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <div class="col-md-12  text-md-center">
                    @if (Model != null && string.IsNullOrEmpty(Model.UserId))
                    {
                    <input type="submit" value="UPDATE USER" class="text-uppercase btn btn-rounded mb-5 btn-info" />
                    }
                    else
                    {
                    <input type="submit" value="ADD USER" class="text-uppercase btn btn-rounded mb-5 btn-info" />
                    }
                    <a href="#" class="text-uppercase btn btn-rounded mb-5 btn-warning" data-dismiss="modal">CANCEL</a>
                </div>

            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

<script>
        $("#myEditform").submit(function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                type: "POST",
                url: "/UserManagement/Save",
                data: formData,
                success: function (data) {
                    if (data.status) {
                        window.location.reload(); //run my_fun() ondomready
                        $('#actionsList').modal("hide");
                        toastr.success(data.message);
                    }
                    else {
                        toastr.warning(data.message);
                    }
                },
                cache: false,
                contentType: false,
                processData: false
            });
        });

</script>



